<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen1"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:src="@drawable/letsgounscreen"></pl.droidsonroids.gif.GifImageView>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/snowunscreen">

    </pl.droidsonroids.gif.GifImageView>

    <ImageButton
        android:id="@+id/imageButtonplay"
        android:layout_width="236dp"
        android:layout_height="185dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="81dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/playunscreen"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="247dp"
        android:layout_below="@+id/imageButtonplay"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="-3dp"
        android:src="@drawable/quaunscreen">

    </ImageView>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="154dp"
        android:layout_height="205dp"
        android:layout_below="@+id/imageButtonplay"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-68dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="0dp"

        android:src="@drawable/qua3unscreen">

    </pl.droidsonroids.gif.GifImageView>

</RelativeLayout>